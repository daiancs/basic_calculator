<RootApplication>:
    orientation: "vertical"
    FloatInput:
        id: edt_value
        halign: "right"
        font_size: 40
        size_hint_y: None
        height: root.height / 6
    GridLayout:
        cols: 4
        Button:
            text: "CE"
            background_color: (.85, .85, .85, 1)
        Button:
            text: "C"
            background_color: (.85, .85, .85, 1)
        Button:
            text: "<-"
            background_color: (.85, .85, .85, 1)
        Button:
            text: "/"
            background_color: (.85, .85, .85, 1)
        Button:
            text: "7"
            on_release: root.digit_click(self.text)
        Button:
            text: "8"
            on_release: root.digit_click(self.text)
        Button:
            text: "9"
            on_release: root.digit_click(self.text)
        Button:
            text: "X"
            background_color: (.85, .85, .85, 1)
        Button:
            text: "4"
            on_release: root.digit_click(self.text)
        Button:
            text: "5"
            on_release: root.digit_click(self.text)
        Button:
            text: "6"
            on_release: root.digit_click(self.text)
        Button:
            text: "-"
            background_color: (.85, .85, .85, 1)
        Button:
            text: "1"
            on_release: root.digit_click(self.text)
        Button:
            text: "2"
            on_release: root.digit_click(self.text)
        Button:
            text: "3"
            on_release: root.digit_click(self.text)
        Button:
            text: "+"
            background_color: (.85, .85, .85, 1)
        Button:
            text: "+/-"
            background_color: (.85, .85, .85, 1)
        Button:
            text: "0"
            on_release: root.digit_click(self.text)
        Button:
            text: "."
            background_color: (.85, .85, .85, 1)
            on_release: root.digit_click(self.text)
        Button:
            text: "="
            background_color: (.85, .85, .85, 1)
